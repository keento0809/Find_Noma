
<div class="container">
    <section class="title">
        <h2>Explore Your Nomado-Cafe</h2>
        <p>Welcome, Member No. <%= @user.id %>, <%= @user.username %>!</p>
        <%= link_to "POST NEW", new_post_path %>
    </section>
    <div class="sub-container new">
        <h3>New Posts</h3>
        <div class="post-list">
        
            <%# ここに新着投稿一覧を表示 %>
            <% @posts.each do |post|  %>
                <section>
                    <span><%= post.cafename %></span>
                    <span><%= post.comment %></span>
                    <%# if false %>
                    <div id="star-rate<%= post.id %>"></div>
                    <%# end %>
                    <div class="post-img">
                        <% if post.img? %>
                            <img class="cafe_img" src="<%= post.img %>">
                        <% else %>
                            <img class="cafe_img" src="/assets/default3.png">
                        <% end %>
                    </div>
                    <span><%= link_to "DELETE", post_path(post.id), method: :delete %></span>
                </section>
                <script>
                    $('#star-rate<%= post.id %>').raty({
                        size : 36,
                        starOff : '<%= asset_path('star-off.png') %>',
                        starOn : '<%= asset_path('star-on.png') %>',
                        starHalf : '<%= asset_path('star-half.png') %>',
                        half: true,
                        readOnly: true,
                        score: <%= post.rate %>,
                    });
                </script>
            <% end %>
        </div>
    </div>
    <div class="sub-container">
        <h3>Popular Posts</h3>
    </div>
    <div class="sub-container">
        <h3>Your Posts</h3>
        <%# ここに自分の投稿を投稿日時順に表示 %>
        
    </div>
</div>



