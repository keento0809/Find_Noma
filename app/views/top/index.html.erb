<% provide(:title, "TOP") %>

<div class="container">
    <section class="top-title">
        <h2>Explore Your 'Nomado' Cafe</h2>
        <%# 下記コメントアウト中 %>
        <% if false %>
        <p>Welcome, Member No. <%= @user.id %>, <%= @user.username %>!</p>
        <% end %>
        <%# 仮の検索フォーム %>
        <%# <input> %>
        <i class="fas fa-search"></i>
        <%# 新規投稿ページへのリンク　fontawesome使用 %>
        <%= link_to new_post_path, class: 'new-post-icon', method: :get do %>
            <i class="far fa-edit"></i>
            <span class="new-post-logo">POST NEW</span>
        <% end %>
    </section>

    <div class="sub-container new">
        <h2>New Posts</h2>
        <div class="post-list" id='post-pagenate'>
            <%# ここに新着投稿一覧を表示 %>
            <%= render 'post_index' %>
        </div>

        <%# pagenateリンクの作成, コメントアウト中 %>
        <% if false %>
        <%= link_to_next_page @posts, "Next", remote: true, id: 'mo' %>
        <% end %>
        
        <div class="pages"><%= paginate @posts %></div>
    </div>

    <div class="sub-container popular">
        <h2>Popular Posts</h2>
        <%# いいね数の多い投稿を表示する %>
        <div class="post-list">
            <%= render 'posts/ranked' %>
        </div>
        
        <div class="pages"><%#= paginate @ranked_posts %></div>
        <div class="pages"><%= paginate @posts %></div>
    </div>

    <div class="sub-container my-own">
        <h2>Your Favorite Posts</h2>
        <%# ここに自分がLikeを押した投稿を、投稿日時順に表示 %>
        <div class="post-list">
            <%= render 'posts/liked_post' %>
        </div>

        <div class="pages"><%= paginate @liked_posts %></div>
        <div class="pages"><%= paginate @posts %></div>
    </div>

    <%# javascriptで遷移できるように実装する %>
    <div class="about">
        <p>この下に本web applicationの概要とノマドカフェの説明を記述</p>
        <%# font-awesomeアイコンのテスト表示 %>
        <i class="fas fa-user"></i>
        <i class="fas fa-wifi"></i>
        <i class="fas fa-plug"></i>
    </div>

    <%# footer読み込み %>
    <%= render 'layouts/footer' %>
</div>



